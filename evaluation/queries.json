    "description": "Measure Lighthouse performance score on mobile viewport",
    "test_type": "performance",
    "metric_target": "Performance Metrics",
    "params": {
      "viewport": "mobile",
      "throttle": "4g",
      "categories": ["performance", "accessibility", "best-practices", "seo"]
    }
